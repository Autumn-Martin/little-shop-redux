<section class="merchant-dashboard-page">
  <section class="jumbotron text-center" style="margin-bottom:5%">
    <h1 class="index-title"style="margin:5%">Merchants Dashboard</h1>
  </section>

  <section class="best-merchants">
    <div class ="row best-merchants">
      <div class="col best-merchants">
        <p>Merchant With Most Items:</p>
        <br>
        <a href="/merchants/<%=@most_items.id%>"><p><%= @most_items.name %></p></a>
      </div>
      <div class="col best-merchants">
        <p>Merchant With Highest Price Item:</p>
        <br>
        <a href="/merchants/<%=@highest_priced_item.id%>"><p><%= @highest_priced_item.name %></p></a>
      </div>
    </div>
  </section>

  <section>
    <% @merchants.each do |merchant| %>
      <ul>
        <li><a href="/merchants/<%=merchant.id%>"><p><%= merchant.name %></p></a>
        <li><p>Item Count: <%= merchant.total_merchant_items %></p></li>
        <li><p>Avg Item Price: $ <%= '%.2f' % merchant.average_item_price %></p></li>
        <li><p>Total Cost of Items: $ <%= '%.2f' % merchant.total_price_all_items %></p></li>
      </ul>
    <% end %>
  </section>
</section>
