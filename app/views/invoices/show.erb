<section class="index">
  <section class="jumbotron text-center">
    <h1 class="index-title">Invoice: <%=@invoice.id%> - <%=@invoice.status%></h1>
    <h2>Edit</h2>
    <h2>Delete</h2>
  </section>
  <p><a href="">Merchant Name</a></p>
    <div>
      <ul>
        <li>Item ID</li>
        <li>Item Title</li>
        <li>Quantity</li>
        <li>Unit Price</li>
      </ul>
    </div>
    <% @invoice.invoice_items.each do |invoice_item| %>
    <div class="row invoice-item-index">
      <div class="col invoice-item-index">
        <a href="/items/<%= invoice_item.item.id %>" class="badge" id="item-link"> <%= invoice_item.item.title %> </a>
      </div>
      <div class="col-1 invoice-item-index">
        <%= invoice_item.item.title %>
      </div>
      <div class="col-1 invoice-item-index">
        <%= invoice_item.quantity %>
      </div>
      <div class="col-1 invoice-item-index">
        <%= invoice_item.item.unit_price %>
      </div>
    </div>
    <% end %>
  </div>
</section>
