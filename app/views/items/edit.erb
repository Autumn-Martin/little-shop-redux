<section class="jumbotron text-center" style="margin-bottom:5%">
  <h1 class="index-title"style="margin:5%">Edit <%= @item.title %>:</h1>
</section>
<form class='edit-item' action='/items/<%= @item.id %>' method='POST'>
  <p>Merchant</br>
   <!-- need to make a drop down menu here -->
    <%@merchants.each do |merchant|%>
    <option value="<%=merchant.id%>"><%=merchant.name%></option>
    <%end%>
  </p></br>
  <p>Title</br>
  <input type='hidden' name='_method' value='PUT'>
  <textarea name='item[title]'><%= @item.title %></textarea></p></br>
  <p>Description</br>
  <textarea name='item[description]'><%= @item.description %></textarea></p><br/>
  <p>Price</br>
  <input type='text' name='item[price]' value='<%= @item.unit_price %>'></p></br>
  <p>Image URL</br>
  <input type='text' name='item[image]' value='<%= @item.image %>'></br></br></br>
  <input type='submit' value='Update Item'></p></br>
</form>
<form action="/items"><input type="submit" value="Cancel"></form>
