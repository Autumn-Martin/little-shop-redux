<p>Edit <%= @item.title %>:</p>
<form class='edit-item' action='/items/<%= @item.id %>' method='POST'>
  <label for="merchant-select">Merchant</label>
  <select class="form-control" id="merchant-select">
    <%@merchants.each do |merchant|%>
    <option value="<%=merchant.id%>"><%=merchant.name%></option>
    <%end%>
  </select></br>
  <p>Title</br>
  <input type='hidden' name='_method' value='PUT'>
  <textarea name='item[title]'><%= @item.title %></textarea></p></br>
  <p>Description</br>
  <textarea name='item[description]'><%= @item.description %></textarea></p><br/>
  <p>Price</br>
  <input type='text' name='item[price]' value='<%= @item.price %>'></p></br>
  <p>Image URL</br>
  <input type='text' name='item[image]' value='<%= @item.image %>'></br></br></br>
  <input type='submit' value='Update Item'></p></br>
</form>
<form action="/items"><input type="submit" value="Cancel"></form>
